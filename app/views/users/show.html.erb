
<div class="container">
    <div class="profile" id="profile-template">
        <div>
          <%= image_tag @user.photo, alt: "User Photo", class: "avatar-placeholder" %>
        </div>
        <div class="profile-info">
            <h2 class="user-name"><%= @user.name%></h2>
            <p class="user-posts"><%= @user.posts.count %></p>
        </div>
    </div>
</div>

<div class="container">
    <div class="profile" id="profile-template">
        <div class="profile-info">
            <h2 class="user-name">Bio</h2>
            <p><%= @user.bio %></p>
        </div>
    </div>
</div>

<% @user.recent_posts.each_with_index do |post, index|  %>
<div class="container">
    <div class="profile" id="profile-template">
        <div class="profile-info">
            <h2 class="user-name">Posts <%= index+1 %>: <%= link_to post.title, user_post_path(@user, post) %></h2>
            <p><%= post.title %></p>
            <p>Comments: <%= post.comments.count %> | Likes: <%= post.likes.count %></p>
        </div>
    </div>
</div>
<% end %>
<%= link_to "See all post", user_post_path(@user), class: 'button' %>

