<div class="container">
    <div class="profile" id="profile-template">
        <div><%= image_tag @user.photo, alt: "User Photo",  class: "avatar-placeholder" %></div>
        <div class="profile-info">
            <h2 class="user-name"><%= link_to @user.name, user_path(@user) %></h2>
            <p class="user-posts">Number of posts: <%= @user.posts.count %></p>
        </div>
    </div>
</div>

<% @posts.limit(2).each do |post| %>
<div class="container">
    <div class="profile" id="profile-template">
        <div class="profile-info">
            <h2 class="user-name">Posts</h2>
            <p><%= post.text %></p>
            <p class="count">Comments: <%= post.comments.count %> | Likes: <%= post.likes.count %></p>
        </div>
    </div>
</div>

<div class="container">
    <div class="profile" id="profile-template">
        <div class="profile-info">
          <% post.recent_comments.each do |comment| %>
            <p><%= link_to comment.user.name, user_path(comment.user) %>: <%= comment.text %></p>
          <% end %>
        </div>
    </div>
</div>
<% end %>
<%= link_to 'Pagination', user_posts_path(@user), class: 'button' %>
